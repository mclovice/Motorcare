<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAccountMechanic">



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/garagename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Garage name"
            android:inputType="text"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="text"
            android:id="@+id/location"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Director's Name"
            android:inputType="text"
            android:id="@+id/director"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:id="@+id/garage_phone"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10sp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:inputType="text"
        android:id="@+id/username_or_email"
        android:textSize="20dp"/>

</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:id="@+id/confirm_password"
            android:textSize="20dp"/>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="200dp"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20sp"
            android:textSize="20dp"
            android:id="@+id/cancel"
            android:textStyle="bold"
            android:background="@drawable/login_button_design"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="200dp"
            android:text="Register"
            android:id="@+id/register"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20sp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_register"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>