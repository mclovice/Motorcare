<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpareParts"
    android:orientation="vertical"

    android:padding="20sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/myspares"
        android:layout_marginLeft="100dp"
        />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_marginTop="30sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Spare part name"
        android:inputType="text"
        android:textSize="20sp"
        android:id="@+id/spare_name"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_marginTop="20sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Cost"
        android:inputType="number"
        android:textSize="20dp"
        android:id="@+id/spare_cost"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_marginTop="20sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model description"
        android:inputType="text"
        android:textSize="20dp"
        android:id="@+id/spare_model"
        />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spare_attach_file"
        android:text="Attach photo"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#6A2FD1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10sp">

        <Button
            android:id="@+id/spare_cancel_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_design"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textSize="20sp"
            />




        <Button
            android:id="@+id/spare_submit_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_register"
            android:text="Submit"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textSize="20sp"
             />
    </LinearLayout>

</LinearLayout>